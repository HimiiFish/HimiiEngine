name: CMake CI

on:
  push:
    branches: ["main"]
  pull_request:
    branches: ["main"]

jobs:
  build:
    # The CMake configure and build presets simplify the build process
    # and ensure that the CI build is consistent with the local build.
    # For more information on CMake presets, see: https://cmake.org/cmake/help/latest/manual/cmake-presets.7.html

    runs-on: ${{ matrix.os }}

    strategy:
      # Ensure that all jobs run to completion even if one fails.
      fail-fast: false

      # Define the build matrix for different OS and compiler combinations.
      matrix:
        include:
          # Windows build using Visual Studio (compiler is handled by the preset)
          - os: windows-latest
            preset: x64-release
            build_preset: build-x64-release-win

          # Linux build using GCC
          - os: ubuntu-latest
            preset: linux-release
            build_preset: build-linux-release
            env:
              CC: gcc
              CXX: g++

          # Linux build using Clang
          - os: ubuntu-latest
            preset: linux-release
            build_preset: build-linux-release
            env:
              CC: clang
              CXX: clang++

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        submodules: 'recursive'

    # vcpkg is included in the repo, so we need to bootstrap it to make it available.
    - name: Bootstrap vcpkg (Windows)
      if: runner.os == 'Windows'
      run: ${{ github.workspace }}\vcpkg\bootstrap-vcpkg.bat
      shell: cmd

    - name: Bootstrap vcpkg (Linux)
      if: runner.os == 'Linux'
      run: |
        chmod +x ${{ github.workspace }}/vcpkg/bootstrap-vcpkg.sh
        ${{ github.workspace }}/vcpkg/bootstrap-vcpkg.sh
      shell: bash

    - name: Cache vcpkg dependencies
      uses: actions/cache@v4
      with:
        path: |
          ${{ github.workspace }}/vcpkg/buildtrees
          ${{ github.workspace }}/vcpkg/packages
          ${{ github.workspace }}/vcpkg/downloads
        key: ${{ runner.os }}-${{ matrix.preset }}-vcpkg-${{ hashFiles('**/vcpkg.json') }}
        restore-keys: |
          ${{ runner.os }}-${{ matrix.preset }}-vcpkg-

    - name: Install dependencies (Linux)
      if: runner.os == 'Linux'
      shell: bash
      run: |
        sudo apt-get update
        sudo apt-get install -y \
          ninja-build build-essential autoconf automake libtool libltdl-dev \
          libgl1-mesa-dev libglu1-mesa-dev xorg-dev libxcursor-dev libxi-dev libxrandr-dev libxinerama-dev \
          git curl zip unzip tar pkg-config python3

    - name: Configure CMake (Linux)
      if: runner.os == 'Linux'
      run: cmake --preset ${{ matrix.preset }}
      env:
        CC: ${{ matrix.env.CC }}
        CXX: ${{ matrix.env.CXX }}
        CMAKE_MAKE_PROGRAM: /usr/bin/ninja

    - name: Configure CMake (Windows)
      run: cmake --preset ${{ matrix.preset }}
      if: runner.os == 'Windows'

    - name: Build (Linux)
      # Use the build preset to build the project.
      run: cmake --build --preset ${{ matrix.build_preset }}
      if: runner.os == 'Linux'
      env:
        CC: ${{ matrix.env.CC }}
        CXX: ${{ matrix.env.CXX }}
        CMAKE_MAKE_PROGRAM: /usr/bin/ninja

    - name: Build (Windows)
      run: cmake --build --preset ${{ matrix.build_preset }}
      if: runner.os == 'Windows'
